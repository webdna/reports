{% set cp = create("craft\\helpers\\Cp") %}

{% set userGroups = [] %}
{% for group in craft.app.userGroups.getAllGroups() %}
	{% set userGroups = userGroups|merge([{
		label: group.name,
		value: group.id,
	}]) %}
{% endfor %}


{{ raw(cp.checkboxSelectFieldHtml({
	id: 'userGroupId',
	label: "User Group"|t,
	name: 'options[userGroupId]',
	options: userGroups,
	values: options.userGroupId ?? null,
	errors: report.getErrors('userGroupId'),
	showAllOption: true,
})) }}
